<%- include('comon/header') %>
<!-- Main -->
<div class="main">
  <%- include('comon/topBarSearch') %>
  <style>
    .content {
      padding: 30px;
    }
    .imagePost {
      width: 300px;
      height: 100px;
      border-radius: 15px;
      object-fit: fill;
    }
    .table tbody tr td:nth-child(2) {
      width: 75%;
    }
      h5 {
      background-color: rgba(25, 135, 84, 1);
      color: white;
      border-radius: 5px;
      padding: 15px;
      text-align: center;
    }
    .table thead tr th {
      background-color: rgba(25, 135, 84, 1);
      color: white;
    }
  </style>
  <!--Main-->
  <div class="container content">
  <div class="d-flex align-items-center justify-content-between mb-3">
      <h5>Quản lý popup</h5>
      <div class="action">
        <a class="btn btn-success" href="/admin/course/create">
        <i style="pointer-events: none" class="fa-solid fa-book"></i>
          + Popup
      </a>
   
        </a>
           <a class="btn btn-success" >
          
        <i style="pointer-events: none" class="fa-solid fa-book"></i>
          <strong>Popup: </strong>
          <%= data.length%>
      </a>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Image</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(data && data.length > 0) { %> <% data.forEach((popup, index) => {
        %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td>
            <img
              class="imagePost"
              src="<%= popup?.popupImage %>"
              alt="imagePost"
              loading="lazy"
            />
          </td>
          <td>
            <button
              type="button"
              class="btn btn-primary btn-edit success"
              value="<%= popup?._id %>"
            >
              <i
                style="pointer-events: none"
                class="fa-solid fa-pen-to-square"
              ></i>
            </button>
            <button
              class="btn btn-danger btn-delete delete"
              value="<%= popup?._id %>"
            >
              <i style="pointer-events: none" class="fa-solid fa-trash"></i>
            </button>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="4" class="text-center">No data</td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <!-- <div class="controlTable">

    </div> -->
  </div>
  <!-- Popup -->
  <div
    class="modal fade"
    id="editModal"
    tabindex="-1"
    aria-labelledby="editModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Chỉnh sửa slider</h5>
          <button
            type="button"
            class="btn-close"
            id="cancelPopup"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="popupImage" class="form-label">Image</label>
              <input
                type="file"
                class="form-control"
                id="popupImage"
                name="popupImage"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Vui lòng chọn ảnh</div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            id="cancelPopup2"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" id="savePopup" class="btn btn-primary">
            Lưu thay đổi
          </button>
        </div>
      </div>
    </div>
  </div>
  <div id="toasts"></div>
  <!-- Main -->
</div>

<script type="module" src="/JS/managePopup.js"></script>
<%- include('comon/footer') %>
