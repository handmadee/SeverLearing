<%- include('./../comon/header') %>
<!-- Main -->
<div class="main">
  <%- include('./../comon/topBarSearch') %>
  <!-- Main -->
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .container {
      width: 100%;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 2px 2px 12px #aaa;
    }

    .form-group {
      text-align: center;
      margin-bottom: 20px;
    }

    label {
      margin-right: 10px;
    }

    select,
    input[type="date"],
    button {
      padding: 5px;
      margin-right: 10px;
    }

    button {
      padding: 5px 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    table,
    th,
    td {
      border: 1px solid black;
    }

    th,
    td {
      padding: 8px;
      text-align: center;
    }

    th {
      background-color: #f2f2f2;
    }
    h5 {
      background-color: rgba(26, 25, 25, 0.687);
      color: rgb(237, 241, 18);
      border-radius: 10px;
      padding: 10px 0;
      text-align: center;
    }
    h5:hover {
      cursor: pointer;
      background-color: #4a95e0;
      color: white;
    }
  </style>

  <%- include('./../comon/topBarSearch') %>

  <div class="container">
    <h5>Tìm kiếm theo giai đoạn</h5>
    <div class="form-group">
      <label for="shift">Ca</label>
      <select id="shift">
        <option value="1">1 (8h-9h30)</option>
        <option value="2">2 (9h30-11h)</option>
        <option value="3">3 (11h-18h30)</option>
        <option value="4">4 (18h30-20h)</option>
      </select>
      <label for="day" class="disabled">Thứ</label>
      <select id="day" class="disabled" disabled>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">Chủ nhật</option>
      </select>
      <label for="date">Ngày</label>
      <input type="date" id="date" />
      <button class="btn btn-success" id="search">Tìm kiếm</button>
    </div>
    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Họ và tên</th>
          <th>Số điện thoại phụ huynh</th>
          <th>Trạng thái</th>
          <th>Chức Năng</th>
        </tr>
      </thead>
      <tbody id="studentTableBody">
        <tr>
          <td>Lê Văn Nam</td>
          <td>0905777888</td>
          <td>1</td>
        </tr>
        <tr>
          <td>Trần Thị Nam</td>
          <td>0777898000</td>
          <td>0</td>
        </tr>
      </tbody>
    </table>
  </div>

  <script type="module" src="/JS/findSchedule.js"></script>
  <%- include('./../comon/footer') %>
</div>
