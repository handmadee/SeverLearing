<style>
  /*===============================*
   *  (1) STYLE TỔNG QUAN
   *===============================*/
  :root {
    --main-color: #198754; /* Hoặc rgba(25, 135, 84, 1) */
  }

  button, .btn {
    background-color: var(--main-color);
    color: #fff;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
  }
  button i, .btn i {
    pointer-events: none;
  }
  button:hover .trash, .btn:hover .trash {
    color: red;
  }
  button:hover .review, .btn:hover .review {
    color: #fff;
  }

  /*===============================*
   *  (2) STYLE CHO BẢNG FEEDBACK
   *===============================*/
  .boxFeedBack {
    width: 100%;
    border-collapse: collapse;
    margin: 0 auto;
  }

  .boxFeedBack thead {
    background-color: var(--main-color);
    color: #fff;
  }

  .boxFeedBack thead th {
    padding: 10px;
    text-align: left;
    border-right: 1px solid #cce3de;
  }

  .boxFeedBack tbody td {
    padding: 5px;
    vertical-align: middle;
    border-bottom: 1px solid #eee;
  }

  /* Điều chỉnh width 7 cột */
  .boxFeedBack tbody tr th:nth-child(1) { width: 15%; } /* Học viên */
  .boxFeedBack tbody tr th:nth-child(2) { width: 15%; } /* Giáo viên */
  .boxFeedBack tbody tr th:nth-child(3) { width: 10%; } /* Kĩ năng */
  .boxFeedBack tbody tr th:nth-child(4) { width: 10%; } /* Tư duy */
  .boxFeedBack tbody tr th:nth-child(5) { width: 25%; } /* Nội dung */
  .boxFeedBack tbody tr th:nth-child(6) { width: 10%; } /* Ngày tạo */
  .boxFeedBack tbody tr th:nth-child(7) { width: 15%; } /* Chức năng */

  .boxFeedBack tr:hover {
    background-color: #f5f5f5;
  }

  /*===============================*
   *  (3) STYLE CHO HEADER/INPUT
   *===============================*/
  .feedBack .row {
    align-items: center;
    margin: 15px 0;
  }
  .feedBack .row h5 {
    padding: 10px;
    background-color: var(--main-color);
    color: white;
    border-radius: 15px;
    margin: 0;
  }
  #time {
    border: none;
    background-color: #fff;
    font-size: 15px;
    margin-left: 5px;
  }
  .item.col-3, .item.col-4 {
    display: flex;
    align-items: center;
  }
  .item.col-4 select,
  .item.col-3 select {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 5px;
  }

  .listFeedBack {
    height: 70vh;
    overflow-y: auto;
    border: 1px solid #ccc;
    border-radius: 10px;
    padding: 10px;
  }

  /*===============================*
   *  (4) STYLE CHO DIALOG REVIEW
   *===============================*/
  .dialogReview {
    position: fixed;
    width: 60%;
    height: 70vh;
    left: 50%;
    top: 50%;
    background-color: #fff;
    border-radius: 20px;
    transform: translate(-50%, -50%);
    box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px,
                rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
    display: none;
    z-index: 9999;
    overflow-y: auto;
    padding: 20px;
  }
  .dialogReview .container {
    height: auto;
    width: 100%;
  }

  .dialogReview .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 15px;
  }
  .dialogReview .header p {
    margin: 0;
    font-weight: 600;
    font-size: 1rem;
  }
  .dialogReview .header .nameStudents {
    color: var(--main-color);
  }


.dialogReview .header p {
  margin: 0;
}

.dialogReview .header p:first-child {
  font-weight: bold;
}
.dialogReview .container {
  width: 100%;
}

.Evaluate .createEvaluate {
  float: left;
}

.dialogReview .container .createEvaluate {
  padding: 10px;
  background-color: rgba(25, 135, 84, 1);
  color: white;
  display: block;
  width: max-content;
  margin-left: auto;
  margin-left: 0;
  margin-top: 10px;
}

  .evaluation-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }
  .evaluation-table thead {
    background-color: var(--main-color);
    color: #fff;
  }
  .evaluation-table th, .evaluation-table td {
    padding: 10px;
    border: 1px solid #ccc;
    text-align: center;
  }
  .evaluation-table tbody tr:hover {
    background-color: #f2f2f2;
  }
  .evaluation-table select,
  .evaluation-table input[type="number"] {
    padding: 5px;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  /* Radio Group */
  .radio-group {
    display: flex;
    gap: 10px;
  }
  .radio-group input {
    margin-right: 5px;
  }

  /* Button Đóng */
  .btn1.xmark {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: #ddd;
    border-radius: 50%;
    width: 30px; 
    height: 30px; 
    display: flex; 
    align-items: center; 
    justify-content: center;
  }
  .btn1.xmark:hover {
    background-color: var(--main-color);
    color: #fff;
  }


.dialogReview .container .header .nameStudents,
.dialogReview .container .header .phoneStudents {
  font-size: 1.2rem;
  font-weight: bold;
  color: #198754;
}

/* Table Styling */
.dialogReview .container .evaluation-table {
  width: 100%;
  margin: 1rem 0;
  border-collapse: collapse;
}

.dialogReview .container .evaluation-table th {
  background-color: #198754;
  color: #fff;
  padding: 0.5rem;
  text-align: left;
  font-size: 1rem;
}

.dialogReview .container .evaluation-table td {
  border: 1px solid #198754;
  padding: 0.5rem;
  font-size: 0.9rem;
  color: #495057;
}

.dialogReview .container .evaluation-table td input {
  padding: 5px;
  width: 90%;
  border-radius: 5px;
}

.dialogReview .container .evaluation-table select {
  width: 100%;
  padding: 0.3rem;
  border: 1px solid #198754;
  border-radius: 5px;
  font-size: 0.9rem;
  background-color: #e9f7ec;
  transition: background-color 0.3s ease;
}

.dialogReview .container .evaluation-table select option[value="1"] {
  background-color: #d4edda;
  color: #155724;
}

.dialogReview .container .evaluation-table select option[value="2"] {
  background-color: #ffeeba;
  color: #856404;
}

.dialogReview .container .evaluation-table select option[value="3"] {
  background-color: #f8d7da;
  color: #721c24;
}

/* Evaluation Metrics Styling */
.dialogReview .container .evaluation-metrics {
  margin-top: 1rem;
}

.dialogReview .container .evaluation-metrics p {
  font-size: 1rem;
  font-weight: bold;
  color: #198754;
  margin-bottom: 0.5rem;
}

.dialogReview .container .evaluation-metrics .radio-group {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.dialogReview .container .evaluation-metrics .radio-group label {
  font-size: 0.9rem;
  padding: 0.3rem 1rem;
  border-radius: 15px;
  border: 1px solid #198754;
  cursor: pointer;
  transition:
    background-color 0.3s ease,
    color 0.3s ease;
}

.dialogReview .container .evaluation-metrics .radio-group input[type="radio"] {
  display: none;
}

.dialogReview
  .container
  .evaluation-metrics
  .radio-group
  input[type="radio"]:checked
  + label {
  background-color: #198754;
  color: #fff;
}

.dialogReview .container .Evaluate {
  height: 200px;
}

/* Evaluate Textarea Styling */
.dialogReview .container .Evaluate textarea {
  border: 2px solid #198754;
  border-radius: 5px;
  font-size: 0.9rem;
  padding: 0.5rem;
  resize: none;
  color: #495057;
}

/* Button Styling */
.dialogReview .btn {
  background-color: #198754;
  color: #fff;
  padding: 0.7rem 1.5rem;
  border: none;
  border-radius: 5px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.dialogReview .btn:hover {
  background-color: #145c3b;
}

.dialogReview .btn1 {
  position: absolute;
  top: 1rem;
  right: 1rem;
  cursor: pointer;
}

.dialogReview .btn1 i {
  font-size: 1.5rem;
  color: #198754;
  transition: color 0.3s ease;
}

.dialogReview .btn1 i:hover {
  color: #145c3b;
}

.badge-skill {
  padding: 4px;
  border-radius: 10px;
  color: #fff;
  font-weight: bold;
  text-align: center;;
}

.badge-skill.good {
  background-color: #28a745;
}

.badge-skill.rather {
  background-color: #ffc107;
  color: #000; 
}
.badge-skill.medium {
  background-color: #dc3545;
}


  /*===============================*
   *  (5) RESPONSIVE (nếu cần)
   *===============================*/
  @media (max-width: 768px) {
    .dialogReview {
      width: 90%;
      height: 80vh;
    }
    .evaluation-table th, .evaluation-table td {
      font-size: 14px;
      padding: 5px;
    }
    .dialogReview .header p {
      font-size: 0.9rem;
    }
    
  }



</style>

<div class="main">
  <%- include('./../comon/topBarSearch') %>
  <!-- MAIN -->
  <div class="feedBack p-5">
    <div class="row">
      <h5 class="col-5">Danh sách Feedback từ giáo viên</h5>
      <div class="item col-4 flex">
        <label for="teacher" style="margin-right:5px;">Giáo viên:</label>
        <select class="form-select teacher" id="teacher" name="teacher" required>
          <option disabled>Giáo viên đứng lớp</option>
          <option value="all">Tất cả</option>
          <!-- Data select -->
          <% if (data && data.length > 0) { %>
            <% data.forEach(item => { %>
              <option value="<%= item._id %>"><%= item.username %></option>
            <% }); %>
          <% } %>
        </select>
      </div>
      <div class="item col-3">
        <label for="time" class="fw-medium" style="margin-right:5px;">Tháng</label>
        <select id="time">
          <option value="all">Toàn Bộ</option>
          <option value="1">Tháng 1</option>
          <option value="2">Tháng 2</option>
          <option value="3">Tháng 3</option>
          <option value="4">Tháng 4</option>
          <option value="5">Tháng 5</option>
          <option value="6">Tháng 6</option>
          <option value="7">Tháng 7</option>
          <option value="8">Tháng 8</option>
          <option value="9">Tháng 9</option>
          <option value="10">Tháng 10</option>
          <option value="11">Tháng 11</option>
          <option value="12">Tháng 12</option>
        </select>
      </div>
    </div>
    <div class="listFeedBack mt-3">
      <table class="boxFeedBack">
        <thead>
          <tr>
            <th>Học viên</th>
            <th>Giáo viên</th>
            <th>Kỹ năng</th>
            <th>Tư duy</th>
            <th>Nội dung đánh giá</th>
            <th>Ngày tạo</th>
            <th>Chức năng</th>
          </tr>
        </thead>
        <tbody id="contentTable">
          <!-- Render động từ JS -->
          <tr>
            <td colspan="7" class="text-center py-3">Đang tải...</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- DIALOG REVIEW (POPUP) -->
  <div class="dialogReview" id="dialogReview">
    <div class="container">
      <div class="header">
        <p class="nameStudents">Tên học sinh</p>
        <p class="phoneStudents">SĐT học sinh</p>
      </div>

      <table class="evaluation-table">
        <thead>
          <tr>
            <th>Ngôn ngữ</th>
            <th>Level</th>
            <th>Số lượng bài tập</th>
          </tr>
        </thead>
        <tbody id="tableLanguages">
            <% language.forEach((item)=> { %>
              <tr class="language" data-id="<%= item._id %>">
                <td><%= item?.nameCode %></td>
                <td>
                  <select>
                    <option value="">Chọn</option>
                    <option value="1">Level 1</option>
                    <option value="2">Level 2</option>
                    <option value="3">Level 3</option>
                  </select>
                </td>
                <td><input type="number" min="0" /></td>
              </tr>
            <% }) %>
        </tbody>
      </table>

      <div class="row">
        <div class="evaluation-metrics col-4">
          <p>Kỹ năng lập trình:</p>
          <div class="radio-group">
            <input type="radio" name="programming-skill" value="good" id="radio-good"/>
            <label for="radio-good">Tốt</label>

            <input type="radio" name="programming-skill" value="rather" id="radio-rather"/>
            <label for="radio-rather">Khá</label>

            <input type="radio" name="programming-skill" value="medium" id="radio-medium"/>
            <label for="radio-medium">Trung bình</label>
          </div>

          <p>Tư duy môn học:</p>
          <div class="radio-group">
            <input type="radio" name="thinking-skill" value="good" id="radio-good-min"/>
            <label for="radio-good-min">Tốt</label>

            <input type="radio" name="thinking-skill" value="rather" id="radio-fair-min"/>
            <label for="radio-fair-min">Khá</label>

            <input type="radio" name="thinking-skill" value="medium" id="radio-average-min"/>
            <label for="radio-average-min">Trung bình</label>
          </div>
        </div>

        <div class="Evaluate col-8">
          <textarea style="padding: 30px; width:100%; min-height:150px;" name="content" id="EvaluateContent"></textarea>
        </div>
      </div>

      <button class="btn createEvaluate mt-3" id="btnSubmitFeedback">
        Cập nhật đánh giá
      </button>
      <div class="btn1 xmark" id="btnCloseDialog">
        <i class="fa-solid fa-xmark"></i>
      </div>
    </div>
  </div>

  <div id="toasts"></div>
  <%- include('./../comon/footer') %>

  <!-- TinyMCE nếu cần -->
<script type="module" src="/tinymce/tinymce.min.js"></script>
<script type="module" src="/JS/feedBack.js"></script>

</div>

