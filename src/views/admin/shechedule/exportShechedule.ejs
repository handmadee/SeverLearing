<%- include('./../comon/header') %>
<!-- Main -->
<div class="main">
  <%- include('./../comon/topBarSearch') %>
  <!-- Main -->
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    h5 {
      background-color: rgba(26, 25, 25, 0.687);
      color: rgb(237, 241, 18);
      border-radius: 10px;
      padding: 10px 0;
      text-align: center;
    }
    h5:hover {
      cursor: pointer;
      background-color: #4a95e0;
      color: white;
    }
  </style>

  <div class="containt p-3">
    <h5>Export lịch học</h5>
    <div class="mt-3 mb-3"></div>
    <div class="d-flex mx-5 justify-content-around">
      <div class="d-flex align-items-center">
        <label for="shift">Ca:</label>
        <select class="w-100" id="shift">
          <option value="1">1 (8h-9h30)</option>
          <option value="2">2 (9h30-11h)</option>
          <option value="3">3 (17h-18h30)</option>
          <option value="4">4 (18h30-20h)</option>
        </select>
      </div>
      <div class="d-flex align-items-center">
        <label for="fromDate">Từ ngày:</label>
        <input type="date" id="fromDate" />
      </div>
      <div class="d-flex align-items-center">
        <label for="toDate">Đến ngày:</label>
        <input type="date" id="toDate" />
      </div>
      <button id="export" class="btn btn-success">Export</button>
    </div>

    <table class="mt-3">
      <tr>
        <th>STT</th>
        <th>Họ và tên</th>
        <th>Có mặt</th>
        <th>Vắng mặt</th>
        <th>Chức năng</th>
      </tr>
      <tbody id="attendanceTable">
        <td colspan="5">
          <p>Không có dữ liệu</p>
        </td>
      </tbody>
    </table>
  </div>
  <!-- Popup -->
  <div
    class="modal fade"
    id="editModal"
    tabindex="-1"
    aria-labelledby="editModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h6>Danh sách các buổi học của học sinh</h6>
          <button
            type="button"
            class="btn-close"
            id="cancelPopup"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="p-4">
          <label for="fullName"> Họ và tên </label>
          <h6 id="fullName"></h6>
        </div>

        <div class="modal-body">
          <table>
            <h6>Danh sách các buổi vắng</h6>
            <tr>
              <th>Ngày học</th>
            </tr>
            <tbody id="absentTable">
              <td colspan="5">
                <p>Không có dữ liệu</p>
              </td>
            </tbody>
          </table>
          <table>
            <h6>Danh sách các buổi đi học</h6>
            <tr>
              <th>Ngày học</th>
            </tr>
            <tbody id="presentTable">
              <td colspan="5">
                <p>Không có dữ liệu</p>
              </td>
            </tbody>
          </table>
        </div>

        <div class="modal-footer">
          <button
            type="button"
            id="cancelPopup2"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" id="savePopup" class="btn btn-primary">
            Lưu thay đổi
          </button>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src="/JS/exportSchedule.js"></script>
  <%- include('./../comon/footer') %>
</div>
