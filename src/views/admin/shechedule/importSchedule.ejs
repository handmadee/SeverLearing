<%- include('./../comon/header') %>
<!-- Main -->
<div class="main">
  <%- include('./../comon/topBarSearch') %>
  <!-- Main -->
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      width: 95%;
      height: 98vh;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 2px 2px 12px #aaa;
      overflow-y: scroll;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
    .nav-menu::-webkit-scrollbar {
      display: none;
    }
    .title {
      text-align: left;
      margin-bottom: 20px;
    }
    .import-section {
      text-align: center;
      margin-bottom: 20px;
    }
    .import-section input[type="file"] {
      padding: 5px;
    }
    .import-section button {
      padding: 5px 10px;
      margin-left: 10px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th,
    td {
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    /* Border Tr */
    #studentTable tr {
      border-bottom: 0.5px solid #aaa;
    }
    #studentTable tr td:nth-child(2) {
      text-transform: uppercase;
      text-align: left;
      margin-left: 20px;
    }

    .fileInput {
      display: inline-block;
      background-color: #198754;
      border-radius: 10px;
      box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }
    .fileInput label {
      color: white;
    }
    .import-section input[type="file"] {
      background-color: aqua;
    }
    #studentTable tbody tr {
      width: 45px;
    }
    #studentTable {
      border-radius: 10px;
    }
    #studentTable thead tr th {
      background-color: #198754;
      color: white;
    }
    #studentTable tbody tr td {
      padding: 5px 0;
      font-weight: 500;
      color: #4b4949;
    }
    #studentTable tbody tr td:nth-child(2) {
      padding-left: 20px;
    }

    #countSudents {
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #198754;
      color: white;
      border-radius: 10px;
      margin-left: 10px;
      padding: 0 10px;
    }
    #countSudents span {
      margin: 0 10px;
    }

    #tableList tr:hover {
      background-color: #96e3be;
      cursor: pointer;
    }
    h5 {
      background-color: rgba(25, 135, 84, 1);
      color: white;
      border-radius: 5px;
      padding: 10px;
      text-align: center;
    }
    /* Style search */
    .input-box {
      position: relative;
      height: 50px;
      max-width: 900px;
      width: 100%;
      background: #fff;
      margin: 0 20px;
      border-radius: 8px;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }
    .input-box i,
    .input-box .button {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
    }
    .input-box i {
      left: 20px;
      width: 20px;
      color: #707070;
    }
    .input-box input {
      height: 100%;
      width: 100%;
      outline: none;
      font-size: 18px;
      font-weight: 400;
      border: none;
      padding: 0 155px 0 65px;
      background-color: transparent;
    }
    .input-box .button {
      right: 20px;
      font-size: 16px;
      font-weight: 400;
      color: #fff;
      border: none;
      padding: 10px 30px;
      border-radius: 6px;
      background-color: rgba(25, 135, 84, 1);
      cursor: pointer;
    }
    .input-box .button:active {
      transform: translateY(-50%) scale(0.98);
    }
    /* Responsive */
    @media screen and (max-width: 500px) {
      .input-box {
        height: 66px;
        margin: 0 8px;
      }
      .input-box i {
        left: 12px;
        width: 20px;
        font-size: 25px;
      }
      .input-box input {
        padding: 0 112px 0 50px;
      }
      .input-box .button {
        right: 12px;
        font-size: 14px;
        padding: 8px 18px;
      }

      #contentTable .item td {
        height: 35px !important;
      }
    }
    /*  */
  </style>
  <div class="container">
    <h5>Danh sách học sinh Tsmart</h5>
    <div class="row align-items-center">
      <div class="title col-5">
        <!-- Search -->
        <div class="input-box">
          <i class="fa-solid fa-magnifying-glass search"></i>
          <input type="text" id="ipSearch" placeholder="Search here..." />
          <button class="button" id="handlerSearch">Search</button>
        </div>
        <!-- The end search -->
      </div>
      <div
        class="import-section col-7 d-flex align-content-center justify-content-end"
      >
        <div class="fileInput">
          <label for="fileInput" class="btn">
            Select
            <i style="pointer-events: none" class="fa-solid fa-file-excel"></i>
          </label>
          <input id="fileInput" style="display: none" type="file" />
        </div>

        <!-- <input type="file" id="fileInput" /> -->
        <button class="btn btn-success" id="importButton">
          Import
          <!-- <i style="pointer-events: none" class="fa-solid fa-file-excel"></i> -->
        </button>

        <button class="btn btn-success" id="exportButton">
          Export
          <i style="pointer-events: none" class="fa-solid fa-file-excel"></i>
        </button>
        <!-- Import a students -->
        <button class="btn btn-info text-#19cb54" id="importPersonal">
          <i
            style="pointer-events: none; color: white"
            class="fa-solid fa-user-plus"
          ></i>
        </button>

        <!-- Số lượng học sin có trong trung tâm -->
        <div id="countSudents">
          <span>Tổng số học sinh: <srong><%= total %></srong></span>
          <i class="fa-regular fa-user"></i>
        </div>
        <!-- The end -->
      </div>
    </div>

    <table id="studentTable">
      <thead>
        <tr>
          <th>STT</th>
          <th>ID</th>
          <th>Họ và tên</th>
          <th>Số điện thoại phụ huynh</th>
          <th>Ca</th>
          <th>Thứ</th>
          <th>Chức Năng</th>
        </tr>
      </thead>
      <tbody id="tableList">
        <% if (data && data.length > 0) { %> <% data.forEach((user, index) => {
        %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td><%= user._id %></td>
          <td><%= user.fullname %></td>
          <td><%= user.phone %></td>
          <td><%= user.study %></td>
          <td><%= user.days %></td>
          <td>
            <button
              value="<%= user._id %>"
              class="btn btn-edit btn-primary accordion"
            >
              <i
                style="pointer-events: none"
                class="fa-solid fa-pen-to-square"
              ></i>
            </button>
            <button value="<%= user._id %>" class="btn btn-delete btn-danger">
              <i style="pointer-events: none" class="fa-solid fa-trash"></i>
            </button>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="6" class="text-center">No data</td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <div class="card-footer">
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a
              class="page-link"
              href="/admin/schedule/importStudents?page=<%= currentPage - 1 %>"
              tabindex="-1"
              aria-disabled="true"
              >Previous</a
            >
          </li>
          <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a
              class="page-link"
              href="/admin/schedule/importStudents?page=<%= i %>"
              ><%= i %></a
            >
          </li>
          <% } %>
          <li
            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
          >
            <a
              class="page-link"
              href="/admin/schedule/importStudents?page=<%= currentPage + 1 %>"
              >Next</a
            >
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <div
    class="modal fade"
    id="editModal"
    tabindex="-1"
    aria-labelledby="editModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title mx-auto p-2" id="editModalLabel">
            Chỉnh sửa học sinh
          </h5>
          <button
            type="button"
            class="btn-close"
            id="cancelPopup"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="fullname" class="form-label">Tên học sinh</label>
              <input type="text" class="form-control" id="fullname" required />
              <div class="invalid-feedback">Vui lòng nhập tên.</div>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label"
                >Số điện thoại phụ huynh</label
              >
              <input type="tel" class="form-control" id="phone" required />
              <div class="invalid-feedback">Vui lòng nhập sđt.</div>
            </div>
            <div class="mb-3">
              <label for="study" class="form-label">Ca Học</label>
              <input
                type="number"
                min="0"
                class="form-control"
                id="study"
                required
              />
              <div class="invalid-feedback">Vui lòng nhập ca học.</div>
            </div>
            <div class="mb-3">
              <label for="days" class="form-label">Ngày học</label>
              <div id="daysContainer"></div>
              <button type="button" id="addDayButton" class="btn btn-secondary">
                Thêm ngày học
              </button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            id="cancelPopup2"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" id="savePopup" class="btn btn-primary">
            Lưu thay đổi
          </button>
        </div>
      </div>
    </div>
  </div>

  <div
    class="modal fade"
    id="PersonalModal"
    tabindex="-1"
    aria-labelledby="editModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h6>Thêm học sinh mới</h6>
          <button
            type="button"
            class="btn-close"
            id="cancelPopup12"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form class="needs-validation123" novalidate>
            <div class="mb-3">
              <label for="fullname1" class="form-label">Tên học sinh</label>
              <input type="text" class="form-control" id="fullname1" required />
              <div class="invalid-feedback">Vui lòng nhập tên.</div>
            </div>
            <div class="mb-3">
              <label for="phone1" class="form-label"
                >Số điện thoại phụ huynh</label
              >
              <input type="tel" class="form-control" id="phone1" required />
              <div class="invalid-feedback">Vui lòng nhập sđt.</div>
            </div>
            <div class="mb-3">
              <label for="study1" class="form-label">Ca Học</label>
              <select class="form-select" id="study1">
                <option value="1">1 (8h-9h30)</option>
                <option value="2">2 (9h30-11h)</option>
                <option value="3">3 (14h-15h30)</option>
                <option value="4">4 (16h-17h30)</option>
                <option value="5">5 (17h-18h30)</option>
                <option value="6">6 (18h30-20h)</option>
                <option value="7">7 (19h30-21h)</option>
              </select>

              <div class="invalid-feedback">Vui lòng nhập ca học.</div>
            </div>
            <div class="mb-3">
              <label for="daysContainer1" class="form-label">Ngày học</label>
              <div id="daysContainer1">
                <select class="form-select days" name="days" required="">
                  <option disabled="">Ngày học học sinh trong tuần</option>
                  <option value="2">Thứ 2</option>
                  <option value="3">Thứ 3</option>
                  <option value="4">Thứ 4</option>
                  <option value="5">Thứ 5</option>
                  <option value="6">Thứ 6</option>
                  <option value="7">Thứ 7</option>
                  <option value="8">Chủ nhật</option>
                </select>
              </div>
              <button
                type="button"
                id="addDayButton1"
                class="btn btn-secondary mt-4"
              >
                Thêm ngày học
              </button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            id="cancelPopup1"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" id="savePopup1" class="btn btn-primary">
            Lưu thay đổi
          </button>
        </div>
      </div>
    </div>
  </div>

  <div id="toasts"></div>
  <script type="module" src="/JS/studentsScheducle.js"></script>
  <%- include('./../comon/footer') %>
</div>
