<%- include('comon/header') %>
<!-- Main -->
<div class="main">
  <%- include('comon/topBarSearch') %>
  <style>
    .content {
      padding: 30px;
    }
    .imagePost {
      width: 100%;
      height: 80%;
      border-radius: 15px;
    }
    .table tbody tr td:nth-child(3) {
      width: 65%;
      text-align: left;
    }
    .table tbody tr td:nth-child(4) {
      width: 15%;
      text-align: left;
    }
  </style>
  <!--Main-->
  <div class="container content">
    <h3>Quản lý danh mục khoá học</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Tên danh mục</th>
          <th scope="col">Số khoá học</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <!-- View -->
        <% if(data && data.length > 0) {%> <% data.forEach((category, index) =>
        { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= category?.nameCategory %></td>
          <td class="text-center"><%= category?.courses.length %></td>
          <td>
            <button
              type="button"
              class="btn btn-primary btn-edit success"
              value="<%= category?._id %>"
              data-namecategory="<%= category?.nameCategory %>"
            >
              <i
                style="pointer-events: none"
                class="fa-solid fa-pen-to-square"
              ></i>
            </button>
            <button
              class="btn btn-danger btn-delete delete"
              value="<%= category?._id %>"
            >
              <i style="pointer-events: none" class="fa-solid fa-trash"></i>
            </button>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="4" class="text-center">No data</td>
        </tr>
        <% } %>
        <!-- The end -->
      </tbody>
    </table>
  </div>
  <!-- Popup -->
  <div
    class="modal fade"
    id="editModal"
    tabindex="-1"
    aria-labelledby="editModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Chỉnh sửa danh mục</h5>
          <button
            type="button"
            class="btn-close"
            id="cancelPopup"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="nameCategory" class="form-label">Tên danh mục</label>
              <input
                type="text"
                class="form-control"
                id="nameCategory"
                placeholder="Nhập nội dung"
                required
              />
              <div class="invalid-feedback">Vui lòng nhập nội dung</div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            id="cancelPopup2"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" id="savePopup" class="btn btn-primary">
            Lưu thay đổi
          </button>
        </div>
      </div>
    </div>
    <div id="toasts"></div>
  </div>

  <script type="module" src="/JS/manageCategory.js"></script>
  <%- include('comon/footer') %>
</div>
