<%- include('comon/header') %>
<!-- Main -->
<div class="main">
  <%- include('comon/topBarSearch') %>
  <style>
    .container {
      padding: 30px;
    }
  </style>
  <!--Main-->
  <div class="container row gap-10">
    <div class="createExam col-6 mt-5">
      <form
        id="formChapter"
        class="row col-12 mx-auto g-3 needs-validation"
        novalidate
      >
        <h5>Tạo bài kiểm tra</h5>
        <div class="col-12">
          <label for="title" class="form-label"> Tên bài kiểm tra </label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Vui lòng nhập tên bài Quiz</div>
        </div>
        <div class="col-12">
          <label for="time" class="form-label"> Thời gian </label>
          <input
            type="text"
            class="form-control"
            id="time"
            name="time"
            value="10"
            placeholder="time "
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">
            Vui lòng nhập thời gian thực hiện quiz
          </div>
        </div>
        <!-- Level -->
        <div class="col-12">
          <label for="level" class="form-label">Chọn Level game</label>
          <select class="form-select" id="level" name="level" required>
            <option selected disabled value="">Level</option>
            <option value="111">Dễ</option>
            <option value="112">Trung bình</option>
            <option value="113">Khó</option>
          </select>
          <div class="invalid-feedback">Vui lòng chọn đúng level game</div>
        </div>
        <!-- Points -->
        <div class="col-12">
          <label for="points" class="form-label"> points </label>
          <input
            type="number"
            class="form-control"
            id="points"
            name="points"
            placeholder="points "
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Vui lòng nhập số điểm cho bài quiz</div>
        </div>
        <!-- Category -->
        <div class="col-12">
          <label for="categoryQuiz_id" class="form-label"
            >Chọn danh mục game</label
          >
          <select
            class="form-select"
            id="categoryQuiz_id"
            name="categoryQuiz_id"
            required
          >
            <option selected disabled value="">Danh mục game</option>
            <% game.forEach(function(item, index) { %>
            <option value="<%= item._id %>"><%= item?.nameCategory %></option>
            <% }); %>
          </select>
          <div class="invalid-feedback">
            Vui lòng chọn đúng tên danh mục game
          </div>
        </div>
        <!-- Submit form -->
        <div class="col-12">
          <button class="btn btn-primary" type="submit">Create Quiz</button>
        </div>
        <!--  -->
      </form>
    </div>

    <!-- Create Question -->
    <div class="createQuestion col-6 mt-5">
      <h5>Tạo câu hỏi</h5>
      <form
        id="formQuestion"
        class="row col-12 mx-auto g-3 needs-validation12"
        novalidate
      >
        <div class="col-12">
          <label for="title" class="form-label"> Câu hỏi </label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Vui lòng nhập nội dung câu hỏi</div>
        </div>
        <!--Image Question-->
        <!-- Image Course -->
        <div class="col-12">
          <label for="imageQuestion" class="form-label">Hình ảnh câu hỏi</label>
          <input
            type="file"
            class="form-control"
            id="imageQuestion"
            name="imageQuestion"
          />
          <div class="invalid-feedback">
            Vui lòng chọn đúng đường dẫn với đuổi png hoặc jepg
          </div>
        </div>
        <!-- Câu hỏi  -->
        <div id="answerContainer" class="col-12">
          <div class="answer">
            <label for="answer1" class="form-label">Đáp án 1</label>
            <input
              type="text"
              class="form-control answerInput"
              id="answer1"
              name="answer1"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">
              Vui lòng nhập nội dung câu trả lời
            </div>
          </div>
          <div class="answer">
            <label for="answer2" class="form-label">Đáp án 2</label>
            <input
              type="text"
              class="form-control answerInput"
              id="answer2"
              name="answer2"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">
              Vui lòng nhập nội dung câu trả lời
            </div>
          </div>
        </div>
        <button id="addAnswerBtn">Thêm câu trả lời</button>

        <!-- THE END QUESTION -->
        <div class="col-12">
          <label for="isCorrectAnswer" class="form-label"
            >Chọn đáp án đúng
          </label>
          <select
            class="form-select"
            id="isCorrectAnswer"
            name="category_id"
            required
          >
            <option selected disabled value="">Đáp án đúng</option>
          </select>
          <div class="invalid-feedback">Vui 1 đáp án làm câu hỏi chính xác</div>
        </div>

        <!-- Select Chapter  -->
        <div class="col-12">
          <label for="selectGame" class="form-label">Chọn khoá học</label>
          <select
            class="form-select"
            id="selectGame"
            name="selectGame"
            required
          >
            <option selected disabled value="">Bài kiểm tra</option>
            <% quiz.forEach(function(item, index) { %>
            <option value="<%= item._id %>"><%= item.title %></option>
            <% }); %>
          </select>
          <div class="invalid-feedback">
            Vui lòng chọn đúng tên bài kiểm tra
          </div>
        </div>

        <div class="col-12 mx-auto">
          <button class="btn btn-primary" type="submit">Create Question</button>
        </div>
      </form>
    </div>

    <!-- The end  -->
  </div>

  <!--  -->
  <script type="module" src="/JS/createQuizQuestion.js"></script>
  <%- include('comon/footer') %>
</div>
