<%- include('./../comon/headerTeacher') %>
<!-- Main -->
<div class="main">
  <!-- Main -->
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      width: 95%;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 2px 2px 12px #aaa;
      margin: 20px;
    }

    .form-group {
      text-align: center;
      margin-bottom: 20px;
    }

    label {
      margin-right: 10px;
    }

    select,
    input[type="date"],
    button {
      padding: 5px;
      margin-right: 10px;
    }

    button {
      padding: 5px 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th,
    td {
      padding: 8px;
      text-align: center;
    }

    th {
      background-color: #f2f2f2;
    }
    h5 {
      background-color: rgba(25, 135, 84, 1);
      color: white;
      border-radius: 5px;
      padding: 15px 0;
      text-align: center;
    }
    h5:hover {
      cursor: pointer;
      background-color: #4a95e0;
      color: white;
    }

    .systemRestore table tr th {
      background-color: rgba(25, 135, 84, 1);
      color: white;
    }

    #attendanceTable {
      border: none;
    }

    #attendanceTable tr {
      height: 50px;
    }
    #attendanceTable tr td {
      font-weight: 500;
      padding: 0;
      border-bottom: 2px solid #ddd;
    }
  </style>

  <%- include('./../comon/topBarSearch') %>

  <div class="container systemRestore">
    <h5>Khôi phục điểm danh - Tsmart</h5>
    <div
      class="form-group w-75 d-flex flex-row justify-content-around mx-auto py-2"
    >
      <div class="item">
        <label for="shift">Ca</label>
        <select id="shift">
          <option value="1">1 (8h-9h30)</option>
          <option value="2">2 (9h30-11h)</option>
          <option value="3">3 (14h-15h30)</option>
          <option value="4">4 (17h-18h30)</option>
          <option value="5">5 (18h30-20h)</option>
          <option value="6">6 (19h30-21h)</option>
        </select>
      </div>
      <div class="item">
        <label for="day" class="disabled">Thứ</label>
        <select id="day" class="disabled" disabled>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">Chủ nhật</option>
        </select>
      </div>
      <div class="item">
        <label for="date">Ngày</label>
        <input disabled type="date" id="date" />
      </div>

      <button class="btn btn-success" id="search">Tìm kiếm</button>
    </div>
    <table id="attendanceTable">
      <thead>
        <tr>
          <th>STT</th>
          <th>Họ và tên</th>
          <th>Số điện thoại phụ huynh</th>
          <th>Trạng thái</th>
          <th>Lý do</th>
          <th>Chức Năng</th>
        </tr>
      </thead>
      <tbody id="studentTableBody">
        <tr>
          <td>Lê Văn Nam</td>
          <td>0905777888</td>
          <td>1</td>
        </tr>
        <tr>
          <td>Trần Thị Nam</td>
          <td>0777898000</td>
          <td>0</td>
        </tr>
      </tbody>
    </table>
  </div>

  <script type="module" src="/JS/findSchedule.js"></script>
  <%- include('./../comon/footer') %>
</div>
