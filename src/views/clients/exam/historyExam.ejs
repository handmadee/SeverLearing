<%- include('./../comon/header') %>
<link type="text/css" rel="stylesheet" href="/styles/clients/exam.css" />

<div class="container my-5">
  <!-- Search Card -->
  <div class="card shadow-lg rounded-3 mb-4">
    <div class="card-body p-4">
      <h4 class="card-title text-primary mb-3">
        <i class="bi bi-search me-2"></i>Tra Cứu Kết Quả Thi
      </h4>

      <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Lưu ý:</strong> Vui lòng nhập đầy đủ mã đề thi và mã số sinh
        viên để xem kết quả.
      </div>

      <form id="searchForm" class="row g-3">
        <div class="col-md-6">
          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="searchExamCode"
              placeholder="Mã đề thi"
            />
            <label for="searchExamCode">Mã đề thi</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="searchStudentId"
              placeholder="Mã số sinh viên"
            />
            <label for="searchStudentId">Mã số sinh viên</label>
          </div>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary w-100" id="searchButton">
            <i class="bi bi-search me-2"></i>Tìm Kiếm
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Results Table -->
  <div class="card shadow-lg rounded-3">
    <div class="card-body p-4">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-dark">
            <tr>
              <th class="text-center">Mã Đề</th>
              <th class="text-center">Họ Tên</th>
              <th class="text-center">Số Câu Đúng</th>
              <th class="text-center">Số Câu Sai</th>
              <th class="text-center">Kết Quả</th>
              <th class="text-center">Thời Gian</th>
            </tr>
          </thead>
          <tbody id="examTableBody">
            <tr>
              <td colspan="6" class="text-center text-muted">
                Nhập thông tin tìm kiếm để xem kết quả
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Custom CSS -->
<style>
  .card {
    border: none;
    transition: all 0.3s ease;
  }

  .form-floating > .form-control:focus ~ label,
  .form-floating > .form-control:not(:placeholder-shown) ~ label {
    color: #0d6efd;
  }

  .table thead th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.875rem;
  }

  .result-row {
    transition: all 0.2s ease;
  }

  .result-row:hover {
    background-color: rgba(13, 110, 253, 0.05);
    transform: translateY(-2px);
  }

  .badge {
    font-weight: 500;
    padding: 0.5em 1.2em;
  }

  .badge-result {
    font-size: 0.85rem;
    padding: 0.5em 1.5em;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-out forwards;
  }

  /* Loading Spinner */
  .spinner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .loading-text {
    margin-top: 1rem;
    color: #0d6efd;
  }
</style>
<script type="module" src="/JS/clients/exam/services/historyExam.js"></script>
<%- include('./../comon/footer') %>
